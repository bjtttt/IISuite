<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_input_instrument"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/connection"
            android:id="@+id/txtv_connection" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edittxt_connection" />

        <com.keysight.guozhitao.iisuite.helper.horizontalpicker.HorizontalPicker
            android:id="@+id/picker"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/text_color"
            android:textSize="22sp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="2"
            app:values="@array/values"
            android:focusable="true"
            android:focusableInTouchMode="true"
            app:dividerSize="10dp"
            app:sideItems="@integer/numSideItems"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/idn"
            android:id="@+id/chkbox_idn" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/scpi_tree"
            android:id="@+id/chkbox_scpi" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/connected"
            android:id="@+id/chkbox_instrument_connected" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/locked"
            android:id="@+id/chkbox_locked" />
        </LinearLayout>
</LinearLayout>