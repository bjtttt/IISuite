<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.keysight.guozhitao.iisuite.activity.settings.InstrumentSettingsFragment"
    android:baselineAligned="false">

    <!-- TODO: Update blank fragment layout -->

    <ListView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/instrumentListView"
        android:layout_weight="1.06" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="54dp"
        android:layout_height="fill_parent"
        android:weightSum="1"
        android:layout_margin="2dp"
        android:layout_gravity="top|bottom">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/add"
            android:id="@+id/btn_add_instrument" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/delete"
            android:id="@+id/btn_delete_instrument"
            android:layout_margin="2dp" />

        <!--Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/modify"
            android:id="@+id/btn_modify_instrument"
            android:layout_gravity="center" /-->

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sync"
                android:id="@+id/btn_synchronize_instrument"
                android:layout_margin="2dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
