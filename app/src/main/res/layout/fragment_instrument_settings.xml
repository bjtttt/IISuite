<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.keysight.guozhitao.iisuite.activity.settings.InstrumentSettingsFragment"
    android:baselineAligned="false">

    <!-- TODO: Update blank fragment layout -->

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/instrument_listview"
        android:layout_weight="0.57" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="100dp"
        android:layout_height="fill_parent"
        android:layout_gravity="top|bottom">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/round_corner_button_shape"
            android:padding="5dp"
            android:text="@string/add"
            android:id="@+id/btn_add_instrument"
            android:layout_margin="2dp" />

        <!--Button
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:background="@drawable/round_corner_button_shape"
            android:padding="5dp"
            android:text="@string/delete"
            android:id="@+id/btn_delete_instrument"
            android:layout_margin="2dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/modify"
            android:id="@+id/btn_modify_instrument"
            android:layout_gravity="center" /-->

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:text="@string/sync"
                android:padding="5dp"
                android:background="@drawable/round_corner_button_shape"
                android:id="@+id/btn_synchronize_instrument"
                android:layout_margin="2dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
